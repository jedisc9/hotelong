<% @page_title = "会員の詳細" %>

<h1><%= @page_title %></h1>

<p><%= lonk_to "編集", [:edit, @member] %></p>

<table class = "attr">
	<tr>
		<th width = "150">ID</th>
		<td><%= @member.id %></td>
	</tr>
	<tr>
		<th>氏名</th>
		<td><%= @member.name %></td>
	</tr>
	<tr>
		<th>性別</th>
		<td><%= @member.sex %></td>
	</tr>
	<tr>
		<th>誕生日</th>
		<td><%= @member.birthday.try(:strftime, "%Y年%m月%d日") %></td>
	</tr>
	<tr>
		<th>住所</th>
		<td><%= @member.address %></td>
	</tr>
	<tr>
		<th>メールアドレス</th>
		<td><%= member.email %></td>
	</tr>
	<tr>
		<th>電話番号</th>
		<td><%= member.tel %></td>
	</tr>
</table>
